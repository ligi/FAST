<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dark" parent="@android:style/Theme.Holo">
        <item name="android:windowTitleSize">@dimen/actionbar_height</item>
        <item name="android:windowTitleBackgroundStyle">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="light" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowTitleSize">@dimen/actionbar_height</item>
        <item name="android:windowTitleBackgroundStyle">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="transparent_dark" parent="@android:style/Theme.Holo.Wallpaper">
        <item name="android:windowTitleSize">@dimen/actionbar_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:textColor">?android:attr/textColor</item>
        <item name="android:textColorSecondary">?android:attr/textColorSecondary</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="transparent_light" parent="@android:style/Theme.Holo.Wallpaper">
        <item name="android:windowTitleSize">@dimen/actionbar_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textColorSecondary">?android:attr/textColorSecondaryInverse</item>
        <item name="android:windowActionBar">false</item>
    </style>

</resources>
